<?xml version="1.0" encoding="UTF-8"?>

<!-- FIXME: duplication of dbsession factory -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jee="http://www.springframework.org/schema/jee"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
						http://www.springframework.org/schema/jee
	                    http://www.springframework.org/schema/jee/spring-jee-3.0.xsd">
	
	<!-- FIXME: duplicated find a better solution !!! -->
	<jee:jndi-lookup id="mainOpensocialDataSource" jndi-name="jdbc/bibsonomy"/>
	
	<bean id="mainSqlMapClient" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
        <property name="configLocation" value="classpath:SqlMapConfig.xml" />
        <!-- defined in webapp module using jndi -->
        <property name="dataSource" ref="mainOpensocialDataSource" />
        <property name="transactionConfigClass" value="com.ibatis.sqlmap.engine.transaction.jdbc.JdbcTransactionConfig" />
    </bean>
	
	<bean id="dbSessionFactory" class="org.bibsonomy.database.common.impl.SqlMapClientDBSessionFactory">
		<property name="client" ref="mainSqlMapClient" />
	</bean>

	<!-- factory bean which takes the security token's viewer id as login user 
		name -->
	<bean id="shindigLogicFactory"
		class="org.bibsonomy.database.ShindigDBLogicUserInterfaceFactory">
		<property name="dbSessionFactory" ref="dbSessionFactory" />
	</bean>

	<!--+ | OpenSocial Data Provider + -->
	<bean id="personSpi" class="org.bibsonomy.opensocial.spi.BibSonomyPersonSpi">
		<property name="dbLogicFactory" ref="shindigLogicFactory" />
	</bean>

	<bean id="mockupPersonSpi" class="org.bibsonomy.opensocial.spi.MockPersonSpi" />

	<bean id="oAuthDataStore" class="org.bibsonomy.opensocial.spi.MockOAuthDataStore" />
</beans>