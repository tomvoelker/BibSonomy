<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
               xmlns:s="library://ns.adobe.com/flex/spark"
               xmlns:mx="library://ns.adobe.com/flex/mx"
			   applicationComplete="init();">
	
	<fx:Declarations>
		<!-- animation for camera shutter effect -->
		<s:Fade id="flashFX" duration="550" /> 
		
		<s:Parallel id="discardPhoto">
			<s:children>
				<mx:Zoom
					duration="350" 
					zoomWidthFrom="1.0"								   
					zoomWidthTo="0.01"								   
					zoomHeightFrom="1.0"								   
					zoomHeightTo="0.01"								   
					target="{previewBox}"/>
				<s:Fade duration="350"/>
			</s:children>
		</s:Parallel>
		
		<!-- sound for camera shutter effect -->
		<mx:SoundEffect id="mySound" source="@Embed(source='assets/snap.mp3')" />
		
	</fx:Declarations>
	
	<fx:Script source="QReader.as" />
	
	
		<!-- camera display -->
		<s:Group id="videoArea">
			<s:SpriteVisualElement id="theCam" width="100%" height="100%" />
			
			<!-- overlay that is displayed when qr code is recognized -->
			<s:Group id="previewBox" visible="false" hideEffect="{discardPhoto}">
				<s:Image id="preview" width="100%" height="100%"/>	
				
				<!-- assign effect -->
				<s:BorderContainer 
					id="flashLight" 
					width="100%" 
					height="100%" 
					hideEffect="{flashFX}"  
					backgroundColor="white" 
					backgroundAlpha="0.8"/>
			</s:Group>		
		</s:Group>				

	
</s:Application>