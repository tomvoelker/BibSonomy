<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="BookmarkCommon">
	<resultMap id="bookmark" class="bookmark" extends="Common.resource">
    	<result property="url"      column="book_url"  javaType="string" /> 
	</resultMap>
	
	<resultMap id="bookmarkWithoutUrl" class="bookmark" extends="Common.resource">
	</resultMap>

	<resultMap id="bookmarkPost" class="communityPost" extends="Common.posts">
		<result property="resource"   resultMap="BookmarkCommon.bookmark" />
		<result property="weight"     column="weight"      javaType="double" />
	</resultMap>

	<resultMap id="communityBookmarkPost" class="communityPost" extends="BookmarkCommon.bookmarkPost">
		<result property="weight"         column="weight"      javaType="double" />
		<result property="communityId"    column="community_uid" />
	</resultMap>

	<sql id="commonBookmarkAttributes">
	    b.content_id, b.user_name, b.book_description as title, b.book_extended as description, 
		b.date, b.book_url_hash AS intraHash, b.book_url_hash AS interHash
	</sql>

	<sql id="bookmarkAttributes">
		<include refid="commonBookmarkAttributes"/>
	</sql>	
	
	<sql id="bookmarkAttributes2">
	    bm.content_id, bm.user_name, bm.book_description as title, bm.book_extended as description, 
		bm.date, bm.book_url_hash AS intraHash, bm.book_url_hash AS interHash
	</sql>	

</sqlMap>