<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	<display-name>bibsonomy-scrapingservice</display-name>
	
	<servlet>
		<description></description>
		<display-name>ScrapingServlet</display-name>
		<servlet-name>ScrapingServlet</servlet-name>
		<servlet-class>org.bibsonomy.scrapingservice.servlets.ScrapingServlet</servlet-class>
	</servlet>
	<servlet>
		<description>service for android beta testing</description>
		<display-name>AndroidLoggingServiceServlet</display-name>
		<servlet-name>AndroidLoggingServiceServlet</servlet-name>
		<servlet-class>org.bibsonomy.android.loggingservice.AndroidLoggingServiceServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.css</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>ScrapingServlet</servlet-name>
		<url-pattern>/service</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>AndroidLoggingServiceServlet</servlet-name>
		<url-pattern>/android/logging</url-pattern>
	</servlet-mapping>


	<!--+ 
		|
		| Testing Pingback (logs pings using log4j)
		|
	 	+-->
	<servlet>
		<servlet-name>XmlRpcServlet</servlet-name>
		<servlet-class>org.apache.xmlrpc.webserver.XmlRpcServlet</servlet-class>
		<init-param>
			<param-name>enabledForExtensions</param-name>
			<param-value>false</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>XmlRpcServlet</servlet-name>
		<url-pattern>/xmlrpc</url-pattern>
	</servlet-mapping>

</web-app>
