<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<import resource="classpath:org/bibsonomy/bibsonomy-database-context.xml"/>
	
	<bean id="mainDataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="${database.main.driverClassName}" />
		<property name="url" value="${database.main.url}" />
		<property name="username" value="${database.main.username}" />
		<property name="password" value="${database.main.password}" />
	</bean>
	
	<bean id="systemTagFactory" class="org.bibsonomy.database.systemstags.SystemTagFactory" factory-method="getInstance">
		<property name="executableSystemTagMap" ref="executableSystemTagSet"/>
		<property name="searchSystemTagMap" ref="searchSystemTagSet"/>
		<property name="markUpSystemTagMap" ref="markUpSystemTagSet"/>
	</bean>
	
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations" value="classpath:database-test.properties" />
    	<property name="ignoreUnresolvablePlaceholders" value ="true"/>
	</bean>
	
	<!-- dummies for lucene index -->
	<bean id="dummySearch" class="org.bibsonomy.testutil.DummyResourceSearch" />
	<alias name="dummySearch" alias="luceneBookmarkSearch" />
	<alias name="dummySearch" alias="lucenePublicationSearch" />
	<alias name="dummySearch" alias="luceneGoldStandardPublicationSearch" />
	
</beans>        