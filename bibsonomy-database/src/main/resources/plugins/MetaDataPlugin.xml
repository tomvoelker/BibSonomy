<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="MetaDataPlugin">
	
	<insert id="logPostCopy" parameterClass="metaDataPostParam">
		INSERT INTO post_metadata (`user_name`, `key`, `value`, `content_id`, `ref_content_id`)
		VALUES (#userName#, #key#, #value#, #contentId#, #refContentId#)
	</insert>
		
	<update id="updateMetaDataPostContentId" parameterClass="metaDataPostParam">
		UPDATE post_metadata 
		SET content_id = #newContentId#
		WHERE content_id = #contentId#
	</update>
		
	<update id="updateMetaDataPostRefContentId" parameterClass="metaDataPostParam">
		UPDATE post_metadata 
		SET ref_content_id = #newContentId#
		WHERE ref_content_id = #contentId#
	</update>

</sqlMap>