<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMapConfig PUBLIC "-//iBATIS.com//DTD SQL Map Config 2.0//EN" "http://www.ibatis.com/dtd/sql-map-config-2.dtd">

<sqlMapConfig>

	<!-- 
		define query timeout - works only with mysql-connector-java
		version 5.0.5+ (dbe, 20071010)
	-->	
	<settings
		defaultStatementTimeout="30"
	/>

	<typeAlias alias="date" type="java.util.Date" />
	<typeAlias alias="url" type="java.net.URL" />
	<typeAlias alias="InetAddress" type="java.net.InetAddress" />
	<typeAlias alias="InetAddressStatus" type="org.bibsonomy.common.enums.InetAddressStatus" />
	<typeAlias alias="Role" type="org.bibsonomy.common.enums.Role" />
	<typeAlias alias="Privlevel" type="org.bibsonomy.common.enums.Privlevel" />
	<typeAlias alias="ProfilePrivlevel" type="org.bibsonomy.common.enums.ProfilePrivlevel" />

	<typeHandler javaType="url" callback="org.bibsonomy.database.typehandler.UrlTypeHandlerCallback" />
	<typeHandler javaType="InetAddress" callback="org.bibsonomy.database.typehandler.InetAddressTypeHandlerCallback" />
    <typeHandler javaType="InetAddressStatus" callback="org.bibsonomy.database.typehandler.InetAddressStatusTypeHandlerCallback" />
    <typeHandler javaType="Role" callback="org.bibsonomy.database.typehandler.RoleTypeHandlerCallback" />
    <typeHandler javaType="Privlevel" callback="org.bibsonomy.database.typehandler.PrivlevelTypeHandlerCallback" />
    <typeHandler javaType="ProfilePrivlevel" callback="org.bibsonomy.database.typehandler.ProfilePrivlevelTypeHandlerCallback" />
    
	<transactionManager type="JDBC">
		<dataSource type="JNDI">
			<property name="DataSource" value="java:comp/env/jdbc/bibsonomy"/>
		</dataSource>
	</transactionManager>

	<sqlMap resource="common/TypeAliases.xml" />
	<sqlMap resource="common/Common.xml" />
	<sqlMap resource="common/BookmarkCommon.xml" />
	<sqlMap resource="common/BibTexCommon.xml" />
	<sqlMap resource="common/BibTexExtraCommon.xml" />
	<sqlMap resource="common/GoldStandardPublicationCommon.xml" />
	<sqlMap resource="common/UserCommon.xml" />
	<sqlMap resource="common/GroupCommon.xml" />
	<sqlMap resource="common/TagCommon.xml" />
	<sqlMap resource="common/DocumentCommon.xml" />
	<sqlMap resource="common/AdminCommon.xml" />
	<sqlMap resource="common/AuthorCommon.xml"/>
	<sqlMap resource="common/InboxCommon.xml"/>

	<sqlMap resource="General.xml" />
	<sqlMap resource="Tag.xml" />
	<sqlMap resource="TagRelation.xml" />
	<sqlMap resource="Bookmark.xml" />
	<sqlMap resource="BibTex.xml"/>
	<sqlMap resource="BibTexExtra.xml"/>
	<sqlMap resource="GoldStandardPublication.xml" />
	<sqlMap resource="User.xml"/>
	<sqlMap resource="Group.xml"/>
	<sqlMap resource="Document.xml"/>
	<sqlMap resource="Basket.xml"/>
	<sqlMap resource="Admin.xml"/>
	<sqlMap resource="Statistics.xml"/>
	<sqlMap resource="Author.xml"/>
	<sqlMap resource="Lucene.xml"/>
	<sqlMap resource="Inbox.xml"/>
	<sqlMap resource="Permission.xml"/>

	<!-- Plugins -->
	<sqlMap resource="plugins/Logging.xml"/>
	<sqlMap resource="plugins/GoldStandardPublicationReference.xml"/>
</sqlMapConfig>