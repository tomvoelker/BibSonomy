	<!-- plugins -->
	<sqlMap resource="plugins/Logging.xml" />
	<sqlMap resource="plugins/GoldStandardPublicationReference.xml" />
	<sqlMap resource="plugins/DiscussionPlugin.xml" />
</sqlMapConfig>