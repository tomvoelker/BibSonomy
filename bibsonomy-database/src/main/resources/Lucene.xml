<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Lucene">
	
	<update id="createLuceneTT">
		CREATE TEMPORARY TABLE IF NOT EXISTS tempcids (cid bigint, PRIMARY KEY (cid)) ENGINE=MEMORY
	</update>

	<update id="truncateLuceneTT">
		TRUNCATE TABLE tempcids
	</update>

	<insert id="insertLuceneTT" parameterClass="luceneParam">
		INSERT INTO tempcids(cid) VALUE (#cid#)
	</insert>

</sqlMap>