<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<import resource="classpath:org/bibsonomy/bibsonomy-entityresolver-context.xml" />
	<import resource="classpath:TestDatabaseBaseContext.xml" />
	
	<bean id="propertyConfigurerEntity" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations" value="classpath:entityresolver-test.properties" />
		<property name="ignoreUnresolvablePlaceholders" value ="true"/>
		<property name="order" value="1" />
	</bean>
	
	<bean id="entityDataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="${database.entityresolver.driverClassName}" />
		<property name="url" value="${database.entityresolver.url}" />
		<property name="username" value="${database.entityresolver.username}" />
		<property name="password" value="${database.entityresolver.password}" />
	</bean>
	
	<bean id="path" class="java.lang.String">
		<constructor-arg value="${facebook.userindex.path}" />
	</bean>
</beans>