<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<bean id="entityJDBCDataSource" class="org.bibsonomy.entity.datasource.JDBCDataSource" init-method="init">
		<property name="query" value="SELECT u.user_name, u.user_realname, u.place, u.user_homepage FROM user u WHERE u.spammer = 0 AND u.user_name != 'dblp'" />
		<property name="dataSource" ref="entityDataSource" />
		<property name="columnsSet">
			<set value-type="no.priv.garshol.duke.Column">
				<bean class="no.priv.garshol.duke.Column">
					<constructor-arg value="user_name" />
					<constructor-arg value="user_name" />
					<constructor-arg><null /></constructor-arg>
					<constructor-arg><null /></constructor-arg>
				</bean>
				<bean class="no.priv.garshol.duke.Column">
					<constructor-arg value="user_realname" />
					<constructor-arg value="user_realname" />
					<constructor-arg><null /></constructor-arg>
					<constructor-arg><null /></constructor-arg>
				</bean>
				<bean class="no.priv.garshol.duke.Column">
					<constructor-arg value="user_homepage" />
					<constructor-arg value="user_homepage" />
					<constructor-arg><null /></constructor-arg>
					<constructor-arg><null /></constructor-arg>
				</bean>
				<bean class="no.priv.garshol.duke.Column">
					<constructor-arg value="place" />
					<constructor-arg value="place" />
					<constructor-arg><null /></constructor-arg>
					<constructor-arg><null /></constructor-arg>
				</bean>
			</set>
		</property>
	</bean>
	
	<bean id="userRealnameResolverConfig" class="org.bibsonomy.entity.util.spring.ConfigurationFactoryBean">
		<property name="path" value="classpath:UsernameResolver.xml" />
		<property name="indexPath" value="${facebook.userindex.path}"/>
		<property name="datasource" ref="entityJDBCDataSource" />
	</bean>
	
	<!-- identity resolution for imported facebook friends -->
	<bean id="facebookIdentityResolver" class="org.bibsonomy.entity.UserRealnameResolver" init-method="init" destroy-method="close">
		<property name="config" ref="userRealnameResolverConfig" />
	</bean>
</beans>