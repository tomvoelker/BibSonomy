<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	<display-name>BibSonomy WebDAV</display-name>

	<!--resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/bibsonomy</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref-->

	<servlet>
		<servlet-name>webdav</servlet-name>
		<description>BibSonomy WebDAV</description>
		<servlet-class>
			com.atlassian.confluence.extra.webdav.servlet.resource.WebdavResourceServlet
		</servlet-class>
		<init-param>
			<param-name>ResourceBackendClass</param-name>
			<param-value>org.bibsonomy.webdav.BibSonomyBackend</param-value>
		</init-param>
		<!--init-param>
			<param-name>RootPrefix</param-name>
			<param-value>/</param-value>
			</init-param-->
		<init-param>
			<param-name>RequireAuthentication</param-name>
			<param-value>yes</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>webdav</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>

</web-app>