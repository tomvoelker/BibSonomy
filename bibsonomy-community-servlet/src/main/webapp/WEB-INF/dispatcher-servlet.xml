<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	                    http://www.springframework.org/schema/beans/spring-beans.xsd
	                    http://www.springframework.org/schema/util 
	                    http://www.springframework.org/schema/util/spring-util-2.5.xsd">


	<bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="urlMap">
			<map>
			    <entry key="/"><ref bean="frontPageController"/></entry>
				<entry key="/queryResources"><ref bean="resourceQueryController"/></entry>
				<entry key="/clusterSettings"><ref bean="clusterSettingsController"/></entry>
			</map>
		</property>
	</bean>
	
	
    <!--  #################### controller #################### -->
   	<bean id="frontPageController" class="org.bibsonomy.community.webapp.controller.FrontPageController">
	</bean>
	
	<bean id="resourceQueryController" class="org.bibsonomy.community.webapp.controller.ResourceQueryController">
		<property name="bibTexManager" ref="bibTexLogic"/>
		<property name="bookmarkManager" ref="bookmarkLogic"/>
		<property name="tagManager" ref="tagLogic"/>
		<property name="communityManager" ref="communityLogic"/>
	</bean>
	
	<bean id="clusterSettingsController" class="org.bibsonomy.community.webapp.controller.ClusterSettingsController">
		<property name="tagManager" ref="tagLogic"/>
		<property name="communityManager" ref="communityLogic"/>
		<property name="userSettingsManager" ref="userSettingsLogic"/>
	</bean>

    <!--  #################### logic beans #################### -->
	<bean id="bibTexLogic" class="org.bibsonomy.community.database.BibTexPostManager">
	</bean>
	<bean id="bookmarkLogic" class="org.bibsonomy.community.database.BookmarkPostManager">
	</bean>
	<bean id="tagLogic" class="org.bibsonomy.community.database.TagManager">
	</bean>
	<bean id="communityLogic" class="org.bibsonomy.community.database.CommunityManager">
	</bean>
	<bean id="userSettingsLogic" class="org.bibsonomy.community.database.UserSettingsManager">
	</bean>
    

	<!--  #################### view resolver #################### -->
	<!-- default: JSPs -->
	<bean id="viewResolver"	class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass" value="org.springframework.web.servlet.view.JstlView" />
		<property name="prefix" value="/WEB-INF/jsp/" />
		<property name="suffix" value=".jsp" />
	</bean>
	
	
</beans>
