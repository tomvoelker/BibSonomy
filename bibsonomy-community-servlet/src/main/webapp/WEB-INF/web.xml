<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>bibsonomy-community-servlet</display-name>


	<!--+
	    | context parameters
	    +-->
	<context-param>
		<description>
			URL path under which static resources (js, css, images, ...) are reachable
			(e.g. http://www.bibsonomy.org/resources/css/style.css)
		</description>
		<param-name>resdir</param-name>
		<param-value>/bibsonomy-community-servlet/resources</param-value>
	</context-param>	

	<context-param>
		<param-name>projectHome</param-name>
		<!-- project home URL, INCLUDING the trailing slash! -->
		<param-value>http://www.biblicious.org/</param-value>
	</context-param>

	<context-param>
		<param-name>projectContext</param-name>
		<param-value>/bibsonomy-community-servlet</param-value>
	</context-param>
	
	<!--+
	    | environment entries
	    +-->
	<resource-env-ref>
		<description>Community Configuration Bean</description>
		<resource-env-ref-name>communityConfig</resource-env-ref-name>
		<resource-env-ref-type>org.bibsonomy.community.util.CommunityConfig</resource-env-ref-type>
	</resource-env-ref>

	<!--+
	    | context listeners
	    +-->
	<listener>
		<description>
			loads beans from applicationContext.xml
		</description>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>

	<listener>
		<listener-class>servlets.listeners.InitialConfigListener</listener-class>
	</listener>
	<listener>
		<description>loads beans from applicationContext.xml</description>
   		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  	</listener>

	<!--+
	    | filters
	    +-->
	<filter>
		<filter-name>InitUserFilter</filter-name>
		<filter-class>filters.InitUserFilter</filter-class>
		<init-param>	
			<!-- use X.509 certificates instead of DB to authenticate users -->
			<param-name>useX509forAuth</param-name>
			<param-value>false</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>InitUserFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
  	
	<!--+
	    | servlets
	    +-->
	<servlet>
		<servlet-name>dispatcher</servlet-name>
		<servlet-class>
			org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>dispatcher</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.js</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>/resources</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.css</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.png</url-pattern>
	</servlet-mapping>


	<jsp-config>
		<jsp-property-group>
			<description></description>
			<url-pattern>*.jsp</url-pattern>
			<is-xml>true</is-xml>
		</jsp-property-group>
	</jsp-config>
</web-app>
