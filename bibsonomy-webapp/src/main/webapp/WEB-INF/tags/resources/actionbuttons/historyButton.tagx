<jsp:root version="2.0" 
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:fmt="http://java.sun.com/jsp/jstl/fmt"
	xmlns:fn="http://java.sun.com/jsp/jstl/functions"
	xmlns:buttons="urn:jsptagdir:/WEB-INF/tags/resources/actionbuttons">

	<jsp:directive.attribute name="post" type="org.bibsonomy.model.Post" required="true" />
	<jsp:directive.attribute name="resourceType" type="java.lang.String" required="true" />
	<jsp:directive.attribute name="buttonClasses" type="java.lang.String" required="true" />
	<jsp:directive.attribute name="enforceCommunityPost" type="java.lang.Boolean" required="false"/>
	<jsp:directive.attribute name="additionalText" type="java.lang.String" required="false"/>

	<c:if test="${empty enforceCommunityPost}">
		<c:set var="enforceCommunityPost" value="false" />
	</c:if>

	<c:choose>
		<c:when test="${enforceCommunityPost}">
			<c:set var="url" value="${relativeUrlGenerator.getHistoryUrlForPost(post)}" />
		</c:when>
		<c:otherwise>
			<c:set var="url" value="${relativeUrlGenerator.getHistoryURLByHashAndUserName(post.resource.interHash, null, resourceType)}" />
		</c:otherwise>
	</c:choose>
	
	
	<fmt:message key="${resourceType}.actions.posthistory.title" var="postHistoryTitle" />
	<a class="${buttonClasses}" href="${url}" title="${postHistoryTitle}">
		<span class="fa fa-list-ol"><!--  --></span>
		<c:if test="${not empty additionalText}">
			<c:out value=" " />
			<span>${additionalText}</span>
		</c:if>
	</a>
</jsp:root>
