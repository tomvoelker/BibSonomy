<jsp:root version="2.0" 
    xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:fmt="http://java.sun.com/jsp/jstl/fmt"
	xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:mtl="urn:jsptld:/WEB-INF/taglibs/mytaglib.tld"
	xmlns:fn="http://java.sun.com/jsp/jstl/functions">

	<jsp:directive.attribute name="requPathAndQuery" type="java.lang.String" required="true" />
	<jsp:directive.attribute name="isPublication" type="java.lang.Boolean" required="true" />
	<jsp:directive.attribute name="isBookmark" type="java.lang.Boolean" required="true" />
	
	<!--+
		+ batch edit
		+ requPathAndQuery already contains "/"
		+-->	
 	<c:if test="${isPublication}">
		<c:url var="editUrl"   value="/beditbib${requPathAndQuery}" />
	</c:if>
	<c:if test="${isBookmark}">
		<c:url var="editUrl" value="/bediturl${requPathAndQuery}"/>
	</c:if>
	<fmt:message var="editPageTags" key="post.meta.edit.title"/>
	<a class="btn btn-default btn-xs btn-block" href="${fn:escapeXml(editUrl)}" title="${editPageTags}"><span class="fa fa-pencil"><!--  --></span>&amp;nbsp;<fmt:message key="post.meta.batch_edit"/>...</a>

</jsp:root>