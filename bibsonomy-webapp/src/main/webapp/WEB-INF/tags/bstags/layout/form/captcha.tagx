<jsp:root version="2.0" xmlns="http://www.w3.org/1999/xhtml"
	xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:fn="http://java.sun.com/jsp/jstl/functions"
	xmlns:fmt="http://java.sun.com/jsp/jstl/fmt"
	xmlns:form="http://www.springframework.org/tags/form"
	xmlns:buttons="urn:jsptagdir:/WEB-INF/tags/bstags/buttons"
	xmlns:c="http://java.sun.com/jsp/jstl/core">

	<jsp:directive.tag description="Renders a captcha using command.captchaHTML." body-content="empty"/>
	<!-- if no captcha html present mockcaptcha is used and we do not need to output the captcha -->
	<c:if test="${not empty command.captchaHTML}">
		<div class="fsRow">
			<form:label cssClass="fsLabel" path="recaptcha_response_field" ><fmt:message key="captcha"/>*</form:label>
			${command.captchaHTML} 
			<div class="dissError"><form:errors path="recaptcha_response_field" /></div>
		</div>
	</c:if>

</jsp:root>