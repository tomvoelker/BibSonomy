<jsp:root version="2.0" xmlns="http://www.w3.org/1999/xhtml"
	xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:fmt="http://java.sun.com/jsp/jstl/fmt">

	<jsp:directive.attribute name="panels" fragment="true" required="true" description="Panels for the panel group"/>
	<jsp:directive.attribute name="id" type="java.lang.String" required="true" />
	
	<div class="panel-group" id="${id}">
		<jsp:invoke fragment="panels" />
	</div>
</jsp:root>