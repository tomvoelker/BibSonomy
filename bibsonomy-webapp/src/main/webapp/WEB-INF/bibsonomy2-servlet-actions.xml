							<list>
								<value>ckey</value>
								<value>registerUser.email</value>
								<value>registerUser.homepage</value>
								<value>registerUser.realname</value>
								<value>checkboxAccept</value>
								<value>submit</value>
							</list>
						</property>
					</bean>
				</entry>
				<entry key="/joinGroup">
					<bean parent="controllerBase">
