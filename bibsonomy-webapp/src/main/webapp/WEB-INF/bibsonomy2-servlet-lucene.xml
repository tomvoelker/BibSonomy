<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	                    http://www.springframework.org/schema/beans/spring-beans.xsd
	                    http://www.springframework.org/schema/util 
	                    http://www.springframework.org/schema/util/spring-util-3.0.xsd">
	
	<!-- import the config from the lucene module -->
	<import resource="classpath:LuceneContext.xml" />
	
	<!-- TODO: alias for lucene managers -->
	<util:list id="luceneResourceManagers">
		<ref bean="lucenePublicationManager" />
		<ref bean="luceneBookmarkManager" />
		<ref bean="luceneGoldStandardPublicationManager" />
    </util:list>

	<!--+ 
	 	|
	 	| lucene CRON jobs are defined in bibsonomy2-servlet-cronjobs.xml
	 	|
	 	+-->
</beans>