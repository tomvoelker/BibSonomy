<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	                    http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!--+ 
	 	| TODO: for more readability we should use the spring task namespace
	 	| e.g. <task:scheduled ref="lucenePublicationManager" method="updateAndReloadIndex" cron="22 1/5 * * * ?"/>
	 	| @see http://static.springsource.org/spring/docs/3.0.x/spring-framework-reference/html/scheduling.html
	 	| Define CRON-like jobs in this file
	 	|
	 	+-->

	<!--+ 
	 	| lucene jobs
	 	+-->
	<!-- update jobs without index optimization -->
	<bean id="luceneUpdateBibTexJob" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="lucenePublicationManager" />
		<property name="targetMethod" value="updateAndReloadIndex" />
		<property name="concurrent" value="false" />
	</bean>
	
	<bean id="luceneUpdateBookmarkJob" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="luceneBookmarkManager" />
		<property name="targetMethod" value="updateAndReloadIndex" />
		<property name="concurrent" value="false" />
	</bean>
	
	<bean id="luceneUpdateGoldStandardPublicationJob" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="luceneGoldStandardPublicationManager" />
		<property name="targetMethod" value="updateAndReloadIndex" />
		<property name="concurrent" value="false" />
	</bean>

	<!-- lucene index update cron jobs -->
	<!-- cronExpression is like "sec  min  hour  day  month  dow year(optional)	" -->
	<!--  http://www.opensymphony.com/quartz/api/    http://www.opensymphony.com/quartz/api/org/quartz/CronExpression.html  -->
	<bean id="luceneUpdateBibTexCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="cronExpression" value="22 1/5 * * * ?" /> <!-- *:01,11,..,51:22 -->
		<property name="jobDetail" ref="luceneUpdateBibTexJob" />
	</bean>
	<bean id="luceneUpdateBookmarkCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="cronExpression" value="55 1/5 * * * ?" /> <!-- *:01,11,..,51:22 -->
		<property name="jobDetail" ref="luceneUpdateBookmarkJob" />
	</bean>
	<bean id="luceneUpdateGoldStandardPublicationCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
 		<property name="cronExpression" value="22 1/5 * * * ?" /> <!-- *:01,11,..,51:22 -->
		<property name="jobDetail" ref="luceneUpdateGoldStandardPublicationJob" />
	</bean>
	
	<!-- Generate index jobs -->
	<bean id="luceneGenerateBibTexJob" class="org.bibsonomy.webapp.util.spring.scheduling.DeactivatableMethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="lucenePublicationManager" />
		<property name="targetMethod" value="generateIndex" />
		<property name="concurrent" value="false" />
		<property name="enabled" value="${cron.fulltextsearch.regenerate.enabled.publication}" />
	</bean>
	
	<bean id="luceneGenerateBookmarkJob" class="org.bibsonomy.webapp.util.spring.scheduling.DeactivatableMethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="luceneBookmarkManager" />
		<property name="targetMethod" value="generateIndex" />
		<property name="concurrent" value="false" />
		<property name="enabled" value="${cron.fulltextsearch.regenerate.enabled.bookmark}" />
	</bean>
	
	<!-- Generate index triggers -->
	<bean id="luceneGenerateBibTexCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="cronExpression" value="0 0 12 ? * 2 *" />
		<property name="jobDetail" ref="luceneGenerateBibTexJob" />
	</bean>
	<bean id="luceneGenerateBookmarkCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="cronExpression" value="0 0 9 ? * 2 *" />
		<property name="jobDetail" ref="luceneGenerateBookmarkJob" />
	</bean>
	
	
	<!--+
		| CRON job to send pings to bookmarked web pages
		+-->
	<bean id="pingbackJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="pingback" />
		<property name="targetMethod" value="clearQueue" />
		<property name="concurrent" value="false" />
	</bean>
	<bean id="pingbackTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerBean">
		<property name="jobDetail" ref="pingbackJobDetail" />
		<property name="startDelay" value="300000" /> <!-- start running 5 minutes after system start --> 
		<property name="repeatInterval" value="300000" /> <!-- clean queue every 5 minutes -->
	</bean>
	
	
	<!--+ 
	 	|
	 	| auto synchronization job
	 	|
	 	+-->
	 	
	<bean id="autoSyncJob" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="autoSync"/>
		<property name="targetMethod" value="performAutoSync"/>
		<property name="concurrent" value="false" />
	</bean>
	<bean id="autoSyncCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean"> 
		<property name="cronExpression" value="0 51 23 * * ?" />
		<property name="jobDetail" ref="autoSyncJob" /> 
	</bean> 
	<!-- Keep this commented out in the productive System, it is only used for testing. -->
<!--	<bean id="autoSyncCronTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerBean"> -->
<!--		<property name="jobDetail" ref="autoSyncJob" />-->
<!--		<property name="startDelay" value="60000" />  start one minute after startup -->
<!--		<property name="repeatInterval" value="300000" />  repeat all 5 minutes -->
<!--	</bean>-->
	
	
	<!--+ 
	 	|
	 	| finally, add all your cronjobs here
	 	|
	 	+-->
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="luceneUpdateBibTexCronTrigger" />
				<ref bean="luceneUpdateBookmarkCronTrigger" />
				<ref bean="luceneUpdateGoldStandardPublicationCronTrigger" />
				<ref bean="autoSyncCronTrigger" />
				<ref bean="luceneGenerateBibTexCronTrigger" />
				<ref bean="luceneGenerateBookmarkCronTrigger" />
				<ref bean="pingbackTrigger" />
			</list>
		</property>
	</bean>
</beans>