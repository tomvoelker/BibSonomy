<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	                    http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!--+ 
	 	| TODO: for more readability we should use the spring task namespace
	 	| @see http://static.springsource.org/spring/docs/3.0.x/spring-framework-reference/html/scheduling.html
	 	| Define CRON-like jobs in this file
	 	|
	 	+-->
	<!--+ 
	 	| search index update cron jobs
	 	+-->
	<bean id="searchUpdateBookmarkIndexCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="cronExpression" value="55 1/5 * * * ?" />
		<property name="jobDetail" ref="searchUpdateBookmarkIndexJob" />
	</bean>
	
	<bean id="searchUpdateBookmarkIndexJob" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="searchBookmarkManager" />
		<property name="targetMethod" value="updateIndex" />
		<property name="concurrent" value="false" />
	</bean>
	
	<bean id="searchUpdatePublicationIndexCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="cronExpression" value="1/15 * * * * ?" />
		<property name="jobDetail" ref="searchUpdatePublicationIndexJob" />
	</bean>
	
	<bean id="searchUpdatePublicationIndexJob" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="searchPublicationManager" />
		<property name="targetMethod" value="updateIndex" />
		<property name="concurrent" value="false" />
	</bean>
	
