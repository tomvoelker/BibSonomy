<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jee="http://www.springframework.org/schema/jee"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	                    http://www.springframework.org/schema/util 
	                    http://www.springframework.org/schema/util/spring-util-3.0.xsd
	                    http://www.springframework.org/schema/jee
	                    http://www.springframework.org/schema/jee/spring-jee-3.0.xsd">
	
	<!-- configures given properties in all relevant database managers -->
	<!-- TODO: add more config here -->	
	<bean id="userDatabaseManager" class="org.bibsonomy.database.managers.UserDatabaseManager" factory-method="getInstance" />
	
	<bean id="groupDatabaseManager" class="org.bibsonomy.database.managers.GroupDatabaseManager" factory-method="getInstance">
		<property name="userDb" ref="userDatabaseManager" />
	</bean>
	
	<bean id="bookmarkDatabaseManager" class="org.bibsonomy.database.managers.BookmarkDatabaseManager" factory-method="getInstance">
		<property name="resourceSearch" ref="luceneBookmarkSearch" />
	</bean>
	
	<bean id="publicationDatabaseManager" class="org.bibsonomy.database.managers.BibTexDatabaseManager" factory-method="getInstance">
		<property name="resourceSearch" ref="luceneBibTexSearch" />
	</bean>
	
	<bean id="tagDatabaseManager" class="org.bibsonomy.database.managers.TagDatabaseManager" factory-method="getInstance">
		<property name="bookmarkSearch" ref="luceneBookmarkSearch" />
		<property name="publicationSearch" ref="lucenePublicationSearch" />
	</bean>
	
	<bean id="goldStandardPublicationDatabaseManager" class="org.bibsonomy.database.managers.GoldStandardPublicationDatabaseManager" factory-method="getInstance">
		<property name="search" ref="luceneGoldStandardPublicationSearch" />
	</bean>
	
	<!-- factory for creating system tags -->
	<bean id="systemTagFactory" class="org.bibsonomy.database.systemstags.SystemTagFactory" factory-method="getInstance">
		<property name="dbSessionFactory" ref="dbSessionFactory"/>
	</bean>
	
	<!--+
	    | As soon as we have migrated to myBatis, we should retrieve the 
	    | datasource here from JNDI and give it to the dbSessionFactory. 
	    | We then wouldn't need to bind datasources in database tests using 
	    | JNDI but could just hand them over to the dbSessionFactory.
	    | When activating this, the <datasource> element must be removed from
	    | the SqlMapConfig.xml.
	    | CONTACT: Robert JÃ¤schke 
	    |
	<bean id="sqlMapClient" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
        <property name="configLocation" value="classpath:SqlMapConfig.xml"/>
        <property name="dataSource" ref="dataSource"/>
    </bean>
	
	<jee:jndi-lookup id="dataSource" jndi-name="jdbc/bibsonomy"/>
	 -->
	
	<!-- holdes schema informations from the database -->
	<bean id="dbSchemaInformation" class="org.bibsonomy.database.util.DatabaseSchemaInformation" factory-method="getInstance" />
	
	<bean id="dbSessionFactory" class="org.bibsonomy.database.util.IbatisDBSessionFactory"/>
</beans>