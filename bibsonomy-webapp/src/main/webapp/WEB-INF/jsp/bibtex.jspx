<?xml version="1.0" ?>
<jsp:root version="2.0"
	xmlns="http://www.w3.org/1999/xhtml"
	xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:jspx="urn:jsptld:/WEB-INF/taglibs/jspx.tld"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:fmt="http://java.sun.com/jsp/jstl/fmt"
	xmlns:layout="urn:jsptagdir:/WEB-INF/tags/layout"
	xmlns:tags="urn:jsptagdir:/WEB-INF/tags/tags"
	xmlns:users="urn:jsptagdir:/WEB-INF/tags/users"
	xmlns:discussion="urn:jsptagdir:/WEB-INF/tags/resources/discussion"
	xmlns:fn="http://java.sun.com/jsp/jstl/functions"
	xmlns:parts="urn:jsptagdir:/WEB-INF/tags/layout/parts"
	xmlns:resources="urn:jsptagdir:/WEB-INF/tags/resources/common"
	xmlns:mtl="urn:jsptld:/WEB-INF/taglibs/mytaglib.tld"
	xmlns:bs="urn:jsptagdir:/WEB-INF/tags/layout/bootstrap"
	xmlns:goldstandardpublication="urn:jsptagdir:/WEB-INF/tags/resources/goldstandardpublication"
	xmlns:sidebar="urn:jsptagdir:/WEB-INF/tags/layout/sidebar"
	xmlns:nav="urn:jsptagdir:/WEB-INF/tags/nav">
	
	<jsp:directive.page contentType="text/html; charset=UTF-8" language="java" pageEncoding="UTF-8" session="true" />

	<c:set var="goldstandardPresent" value="${not empty command.goldStandardPublications.list}" />
	<c:set var="publication" value="${command.bibtex.list[0].resource}" />

	<!-- FIXME: move into body element -->
	<c:set var="isPublic" value="${false}"/>
	<c:choose>
		<c:when test="${goldstandardPresent}">
			<c:set var="isPublic" value="${true}"/>
		</c:when>
		<c:otherwise>
			<!-- quick fix for discussion page -->
			<c:set var="discussionBox" value="${true}"/>
			<c:forEach var="group" items="${command.bibtex.list[0].groups}">
				<c:if test="${group.name eq 'public'}">
					<c:set var="isPublic" value="${true}"/>
				</c:if>
			</c:forEach>
		</c:otherwise>
	</c:choose>

	<c:if test="${goldstandardPresent}">
		<c:set var="publication" value="${command.goldStandardPublications.list[0].resource}" />
	</c:if>
	<c:set var="title" value="${mtl:cleanBibtex(publication.title)}" />
	<fmt:message key="post.resource.discussion.headline" var="discussionsTitle"/>
	
	<fmt:message key="navi.publication" var="pageTitle"/>
	
	<!-- FIXME: TODODZO rss feeds -->
	<layout:layout pageTitle="${title}"
			loginUser="${command.context.loginUser}"
			requPath="${requPath}"
			noSidebar="${true}">
		
		<jsp:attribute name="headerExt">
			<!-- TODODZO: merge js files -->
			<script type="text/javascript" src="${resdir}/javascript/merged/discussion.js"><!-- keep me --></script>
			<script type="text/javascript" src="${resdir}/Chart.js/Chart.js"><!-- keep me --></script>
			<script type="text/javascript" src="${resdir}/javascript/publication.js"><!-- keep me --></script>
			<script type="text/javascript" src="${resdir}/javascript/goldstandards.js"><!-- keep me --></script>
			<script type="text/javascript" src="${resdir}/star-rating/star-rating.js"><!-- keep me --></script>
			<link rel="stylesheet" type="text/css" href="${resdir}/jquery/plugins/ui/plugins/stars/jquery.ui.stars.css" />
			<link rel="stylesheet" type="text/css" href="${resdir}/star-rating/star-rating.css" />
		</jsp:attribute>
		
		<jsp:attribute name="breadcrumbs">
			<nav:breadcrumbs>
				<jsp:attribute name="crumbs">
					<fmt:message key="actions.communityPost" var="communityPost"/>
					<nav:crumb name="${communityPost}" />
					<nav:crumb name="${mtl:shorten(title, 150)}" active="true" />
				</jsp:attribute>
			</nav:breadcrumbs>
		</jsp:attribute>
		
		<jsp:attribute name="heading">
			<parts:search pathMessageKey="navi.publication" formAction="/search" formInputName="search" formInputValue="${title}"/>
		</jsp:attribute>
		
		<jsp:attribute name="content">
			<!-- COMMUNITY POST -->
			<input id="publicInput" name="publicInput" value="${isPublic}" type="hidden" />
			
			<c:set var="postToShow" value="${command.bibtex.list[0]}" />
			<c:if test="${goldstandardPresent}">
				<c:set var="postToShow" value="${command.goldStandardPublications.list[0]}" />
			</c:if>
			
			<goldstandardpublication:details post="${postToShow}" postOfLoggedInUser="${command.postOfLoggedInUser}" loginUser="${command.context.loginUser}" postUserName="${command.postOwner}" postIsPublic=""/>
		</jsp:attribute>
		
		<!--+
			| TODODZO: remove
		    | sidebar
		 	+-->
		<jsp:attribute name="sidebar">
			<sidebar:sidebarTagCloudItem requPath="tag" cmd="${command.tagcloud}" tagboxMinfreqStyle="none" />

			<!-- related users -->
			<c:if test="${not empty command.relatedUserCommand.relatedUsers}">
				<sidebar:sidebarItem textKey="users">
					<jsp:attribute name="content">
						<ul class="tagcloud">
							<c:forEach var="user" items="${command.relatedUserCommand.relatedUsers}">
								<li class="${userclass}">
									<a href="${relativeUrlGenerator.getPublicationUrlByInterHashAndUsername(publication.interHash, fn:escapeXml(user.name))}"><c:out value="${user.name}"/></a>
									<c:out value=" "/>
								</li>
							</c:forEach>
						</ul> 
					</jsp:attribute>
				</sidebar:sidebarItem>
			</c:if>
			
			<!-- copy users -->
			<resources:metaData command="${command}" />
		</jsp:attribute>
	</layout:layout>
</jsp:root>