<jsp:root version="2.0"
		  xmlns:jsp="http://java.sun.com/JSP/Page"
		  xmlns:fmt="http://java.sun.com/jsp/jstl/fmt"
		  xmlns:fn="http://java.sun.com/jsp/jstl/functions"
		  xmlns:perdetails="urn:jsptagdir:/WEB-INF/tags/person/details" xmlns:c="http://java.sun.com/jsp/jstl/core">

	<jsp:directive.page contentType="text/html; charset=UTF-8" language="java" pageEncoding="UTF-8" session="true"/>

	<c:choose>
		<c:when test="${fn:length(command.otherPubs) gt 0}">
			<perdetails:publications command="${command}" publications="${command.otherPubs}"
									 isSimilarAuthors="${false}" hideHeadline="${true}"/>
		</c:when>
		<c:when test="${fn:length(command.similarAuthorPubs) gt 0}">
			<perdetails:publications command="${command}" publications="${command.similarAuthorPubs}"
									 isSimilarAuthors="${true}" hideHeadline="${true}"/>
		</c:when>
		<c:otherwise>

		</c:otherwise>
	</c:choose>


</jsp:root>
