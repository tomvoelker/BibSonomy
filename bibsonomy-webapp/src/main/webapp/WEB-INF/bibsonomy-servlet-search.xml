<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	                    http://www.springframework.org/schema/beans/spring-beans.xsd
	                    http://www.springframework.org/schema/util 
	                    http://www.springframework.org/schema/util/spring-util-3.0.xsd
	                    http://www.springframework.org/schema/jee
	                    http://www.springframework.org/schema/jee/spring-jee-3.0.xsd">
	
	<!-- import the config from the elasticsearch search module -->
	<import resource="classpath:org/bibsonomy/bibsonomy-search-elasticsearch-context.xml" />
	
	<alias name="elasticSearchBookmarkManager" alias="searchBookmarkManager" />
	<alias name="elasticSearchPublicationManager" alias="searchPublicationManager" />
	
	<alias name="elasticSearchPublicationSearch" alias="personSearch" />
	
	<alias name="elasticSearchBookmarkSearch" alias="bookmarkSearch" />
	<alias name="elasticSearchPublicationSearch" alias="publicationSearch" />
	
	<!-- FIXME: replace with correct search index -->
	<alias name="elasticSearchPublicationSearch" alias="goldStandardPublicationSearch" />
	
	<util:map id="elasticSearchManagers">
		<entry key-ref="bookmarkClass" value-ref="elasticSearchBookmarkManager" />
		<entry key-ref="publicationClass" value-ref="elasticSearchPublicationManager" />
	</util:map>
</beans>