<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	                    http://www.springframework.org/schema/beans/spring-beans.xsd">



	
	<!-- Both will be used as singletons! -->
	<bean id="simpleLayoutRenderer" class="org.bibsonomy.layout.SimpleLayoutRenderer"/>
	
	<!-- Renders JabRef Layouts -->
	<bean id="jabrefLayoutRenderer" class="org.bibsonomy.layout.jabref.JabrefLayoutRenderer" init-method="init">
		<property name="userLayoutFilePath" value="/home/rja/bibsonomy/bibsonomy_docs/"/>
	</bean>
	
	<bean id="layout" class="org.bibsonomy.webapp.view.LayoutView">
		<property name="layoutRenderer" ref="simpleLayoutRenderer"/>
	</bean>

<!-- 

# view which renders layouts
layout.class=org.bibsonomy.webapp.view.LayoutView
#layout.stylesheetLocation=/WEB-INF/xsl/home.xslt
#layout.root=words
 -->

</beans>
