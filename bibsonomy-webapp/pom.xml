	<description>The webapplication for Bibsonomy.</description>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1.1</version>
				<configuration>
					<!-- 
						otherwise the javascript/css files compressed by
						yuicompressor-maven-plugin are overwritten by this plugin 
					-->
					<warSourceExcludes>**/*.js,**/*.css</warSourceExcludes>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.4</version>
				<executions>
					<execution>
						<!--
							download the latest WURLF specs each time a war file is created.
							if this is too frequent for any reason, check the version history
							of this file for rev. 1.86 which checks if the file already
							exists.
						-->
						<phase>generate-resources</phase>
						<configuration>
							<tasks>
								<mkdir dir="${project.downloaded-resources.directory}" />
								<get src="http://surfnet.dl.sourceforge.net/project/wurfl/WURFL/${wurfl.version}/wurfl-${wurfl.version}.zip"
									dest="${project.downloaded-resources.directory}/wurfl.zip" />
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>net.alchim31.maven</groupId>
				<artifactId>yuicompressor-maven-plugin</artifactId>
				<version>1.3.0</version>
				<executions>
					<execution>
						<id>check_and_compress</id>
						<goals>
							<goal>compress</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<encoding>UTF-8</encoding>
					<jswarn>false</jswarn>
					<nosuffix>true</nosuffix>
					<suffix></suffix>
					<disableOptimizations>true</disableOptimizations>
					<aggregations>
						<!-- note: use the compressed javascript files in ${project.build.webapp.resourcedir} -->
		            	<aggregation>
              				<insertNewLine>true</insertNewLine>
              				<output>${project.build.webapp.resourcedir}/javascript/merged/global.js</output>
              				<includes>
                				<include>${project.build.webapp.resourcedir}/jquery/jquery.js</include>
                				<include>${project.build.webapp.resourcedir}/javascript/functions.js</include>
                				<include>${project.build.webapp.resourcedir}/javascript/fileUpload.js</include>
                				<include>${project.build.webapp.resourcedir}/javascript/jquery.fadebox.js</include>
                				<include>${project.build.webapp.resourcedir}/javascript/style.js</include>
                				<include>${project.build.webapp.resourcedir}/jquery/plugins/textarearesizer/jquery.textarearesizer.js</include>
                				<include>${project.build.webapp.resourcedir}/jquery/plugins/corner/jquery.corner.js</include>
                				<include>${project.build.webapp.resourcedir}/jquery/plugins/hoverIntent/jquery.hoverIntent.js</include>
                				<include>${project.build.webapp.resourcedir}/jquery/plugins/ui/jquery-ui-1.8.16.custom.min.js</include>                				
              					<include>${project.build.webapp.resourcedir}/javascript/ajaxUtils.js</include>
              					<include>${project.build.webapp.resourcedir}/javascript/userRelation.js</include>
								<include>${project.build.webapp.resourcedir}/javascript/addToSpheres.js</include>
              				</includes>
            			</aggregation>
            			<aggregation>
            				<insertNewLine>true</insertNewLine>
            				<output>${project.build.webapp.resourcedir}/javascript/merged/discussion.js</output>
            				<includes>
            					<include>${project.build.webapp.resourcedir}/jquery/plugins/ui/plugins/stars/jquery.ui.stars.js</include>
            					<include>${project.build.webapp.resourcedir}/jquery/plugins/flot/excanvas.js</include>
            					<include>${project.build.webapp.resourcedir}/jquery/plugins/flot/jquery.flot.js</include>
            					<include>${project.build.webapp.resourcedir}/jquery/plugins/flot/jquery.flot.stack.js</include>
            					<include>${project.build.webapp.resourcedir}/javascript/discussion/discussion.js</include>
            					<include>${project.build.webapp.resourcedir}/javascript/discussion/reviews.js</include>
            					<include>${project.build.webapp.resourcedir}/javascript/discussion/comments.js</include>
            					<include>${project.build.webapp.resourcedir}/javascript/discussion/csllinks.js</include>
            					<include>${project.build.webapp.resourcedir}/javascript/citeproc/csllocales.js</include>
								<include>${project.build.webapp.resourcedir}/javascript/citeproc/xmldom.js</include>
								<include>${project.build.webapp.resourcedir}/javascript/citeproc/citeproc.js</include>
								<include>${project.build.webapp.resourcedir}/javascript/citeproc/styles.js</include>
            				</includes>
            			</aggregation>
          			</aggregations>
				</configuration>
			</plugin>
			<plugin>
				<!-- Keep only last version of generated war file in local .m2 repository 
					to save disk space -->
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.5</version>
				<executions>
					<execution>
						<id>remove-old-warfiles</id>
						<goals>
							<goal>remove-project-artifact</goal>
						</goals>
						<configuration>
							<removeAll>true</removeAll>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
			<resource>
				<directory>${project.downloaded-resources.directory}</directory>
			</resource>
		</resources>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>org.apache.maven.plugins</groupId>
										<artifactId>maven-antrun-plugin</artifactId>
										<versionRange>[1.4,)</versionRange>
										<goals>
											<goal>run</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>net.alchim31.maven</groupId>
										<artifactId>yuicompressor-maven-plugin</artifactId>
										<versionRange>[1.1,)</versionRange>
										<goals>
											<goal>compress</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<profiles>
		<profile>
			<id>deploy-to-puma</id>
			<!--
				change tomcat deploy destination when -Ddeploy-to=puma is given as
				parameter.
			-->
			<activation>
				<property>
					<name>deploy-to</name>
					<value>puma</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>tomcat-maven-plugin</artifactId>
						<configuration>
							<server>tomcat_puma</server>
							<url>http://dev.puma.uni-kassel.de:8080/manager</url>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>deploy-to-wuerzburg</id>
			<!--
				change tomcat deploy destination when -Ddeploy-to=wuerzburg is given
				as parameter.
			-->
			<activation>
				<property>
					<name>deploy-to</name>
					<value>wuerzburg</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>tomcat-maven-plugin</artifactId>
						<configuration>
							<server>tomcat_wuerzburg</server>
							<url>http://wue.biblicious.org:8080/manager</url>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
