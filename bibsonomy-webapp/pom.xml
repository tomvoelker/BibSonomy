	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1.1</version>
				<configuration>
					<!-- otherwise the javascript/css files compressed by yuicompressor-maven-plugin 
						are overwritten by this plugin -->
					<warSourceExcludes>**/*.js,**/*.css,WEB-INF/tags/layout/parts/messages.tagx</warSourceExcludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.bibsonomy</groupId>
				<artifactId>webresource-maven-plugin</artifactId>
				<version>1.5.1</version>
				<executions>
					<execution>
						<id>webresource-compress-aggregation</id>
						<phase>compile</phase>
						<goals>
							<goal>compress-aggregate</goal>
						</goals>
						<configuration>
							<compressions>
								<compression>
									<directory>${project.source.webapp.resourcedir}</directory>
									<excludes>
										<exclude>javascript/citeproc/xmle4x.js</exclude>
									</excludes>
									<includes>
										<include>**/*.js</include>
										<include>**/*.css</include>
									</includes>
									<copyExcludedFiles>true</copyExcludedFiles>
									<outputDirectory>${project.build.webapp.resourcedir}</outputDirectory>
								</compression>
							</compressions>
							<aggregations>
								<!-- javascript files for all pages -->
								<aggregation>
									<insertNewLine>true</insertNewLine>
									<output>${project.build.webapp.resourcedir}/javascript/merged/global.js</output>
									<includes>
										<include>${project.build.webapp.resourcedir}/jquery/jquery.js</include>
										<include>${project.build.webapp.resourcedir}/jquery/plugins/ui/jquery-ui.js</include>
										<include>${project.build.webapp.resourcedir}/jquery/plugins/autosize/autosize.js</include>
										<include>${project.build.webapp.resourcedir}/jquery/plugins/scrollTo/jquery.scrollTo.js</include>
										<include>${project.build.webapp.resourcedir}/jquery/plugins/putCursorAtEnd/putCursorAtEnd.js</include>
										<include>${project.build.webapp.resourcedir}/bootstrap/js/bootstrap.js</include>
										<include>${project.build.webapp.resourcedir}/javascript/holder.js</include>
										<include>${project.build.webapp.resourcedir}/javascript/bootstrap-dialog.js</include>
										<include>${project.build.webapp.resourcedir}/javascript/custom.js</include>
										<include>${project.build.webapp.resourcedir}/javascript/bootstrap-datepicker.js</include>
										<include>${project.build.webapp.resourcedir}/select2/js/select2.full.js</include>
										<include>${project.build.webapp.resourcedir}/javascript/bootstrap-tagsinput.js</include>
										<!-- citeproc.js must be included before xmldom.js -->
										<include>${project.build.webapp.resourcedir}/javascript/citeproc/citeproc.js</include>
										<include>${project.build.webapp.resourcedir}/javascript/citeproc/xmldom.js</include>
										<include>${project.build.webapp.resourcedir}/javascript/citeproc-wrapper.js</include>
										<include>${project.build.webapp.resourcedir}/javascript/friendoverview.js</include>
										<include>${project.build.webapp.resourcedir}/javascript/functions.js</include>
										<include>${project.build.webapp.resourcedir}/javascript/actions/clipboard.js</include>
										<include>${project.build.webapp.resourcedir}/javascript/ajaxUtils.js</include>
										<include>${project.build.webapp.resourcedir}/javascript/fileUpload.js</include>
										<include>${project.build.webapp.resourcedir}/javascript/style.js</include>
										<include>${project.build.webapp.resourcedir}/javascript/jquery.fadebox.js</include>
										<include>${project.build.webapp.resourcedir}/javascript/userRelation.js</include>
										<include>${project.build.webapp.resourcedir}/javascript/addToSpheres.js</include>
										<include>${project.build.webapp.resourcedir}/javascript/logging.js</include>
										<include>${project.build.webapp.resourcedir}/clipboard/clipboard.js</include>
									</includes>
								</aggregation>
								<aggregation>
									<insertNewLine>true</insertNewLine>
									<output>${project.build.webapp.resourcedir}/javascript/merged/discussion.js</output>
									<includes>
										<include>${project.build.webapp.resourcedir}/star-rating/star-rating.js</include>
										<include>${project.build.webapp.resourcedir}/Chart.js/Chart.js</include>
										<include>${project.build.webapp.resourcedir}/javascript/discussion/discussion.js</include>
										<include>${project.build.webapp.resourcedir}/javascript/discussion/reviews.js</include>
										<include>${project.build.webapp.resourcedir}/javascript/discussion/comments.js</include>
										<include>${project.build.webapp.resourcedir}/javascript/discussion/csllinks.js</include>
									</includes>
								</aggregation>
							</aggregations>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
