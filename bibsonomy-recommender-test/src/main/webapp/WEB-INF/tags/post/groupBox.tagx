<jsp:root version="2.0" 
    xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:fmt="http://java.sun.com/jsp/jstl/fmt"
	xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:fn="http://java.sun.com/jsp/jstl/functions"
	xmlns:form="http://www.springframework.org/tags/form">

    <!-- 
    
        Shows form fields to choose group(s) the post should be viewable for.
        Consists of three radio buttons: public, private, other
        and a select box which contains the group "frieds" plus other possible groups.     
    
     -->

	<jsp:directive.attribute name="groups" type="java.util.List" required="true"/>
    <jsp:directive.attribute name="post" type="org.bibsonomy.model.Post" required="true"/>
	
	<div>
		<fieldset>
			<legend><form:label path="groups">viewable for*</form:label></legend>
	
			<div style="float: left; margin-right: 1ex;">
	           <!-- radio buttons for public, private, other -->
	           <form:radiobutton path="abstractGrouping" onclick="toggleGroupBox()" value="public" />  <span class="expl"><fmt:message key="post.resource.public"/></span><br/>
	           <form:radiobutton path="abstractGrouping" onclick="toggleGroupBox()" value="private" /> <span class="expl"><fmt:message key="post.resource.private"/></span><br/>
	           <form:radiobutton path="abstractGrouping" onclick="toggleGroupBox()" value="other" id="post.groups.other"/>  <span class="expl"><fmt:message key="post.resource.other"/></span>
			</div>
	            <!-- select box for "other" groups TODO: allow multiple groups-->
	            <form:select multiple="false" path="groups" size="5" id="post.groups.other2">
	              <form:option label="friends" value="friends"/>
	              <form:options items="${groups}" itemValue="name" itemLabel="name"/>
	            </form:select>
	            <div class="postBookmarkNotValidTip"><form:errors path="post.groups" /><!-- This comment is needed, otherwise this will result in an self-closing element --></div>
		</fieldset>
	</div>	
	<script type="text/javascript">
	<![CDATA[
      
      function toggleGroupBox() {
        document.getElementById("post.groups.other2").disabled = !document.getElementById("post.groups.other").checked;
      }

      toggleGroupBox();
	]]>
	</script>
</jsp:root>