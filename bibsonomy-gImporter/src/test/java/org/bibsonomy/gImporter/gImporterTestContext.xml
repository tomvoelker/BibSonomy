<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans.xsd">
				
				
				
				
	
	<bean id="gImporterDataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost:3306/dnb2_light?useUnicode=true&amp;characterEncoding=utf-8&amp;mysqlEncoding=utf8" />
		<property name="username" value="root" />
		<property name="password" value="Mysql123" />
	</bean>
	
	<bean id="gImporterDataLogic" class="org.bibsonomy.gImporter.gImporterDatabaseManager">
		<property name="gImporterData" ref="gImporterDataClass" />
		<property name="sessionFactory" ref="gImporterSessionFactory" />
		
	</bean>
	
	<bean id="gImporterSessionFactory" class="org.bibsonomy.database.common.impl.SqlMapClientDBSessionFactory">
		<property name="client" ref="gImporterSqlMapClient" />
	</bean>
	
	<bean id="gImporterSqlMapClient" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
		
		<property name="dataSource" ref="gImporterDataSource" />
		<property name="configLocation" value="classpath:SqlMapConfiggImporter.xml" />
		<property name="transactionConfigClass" value="com.ibatis.sqlmap.engine.transaction.jdbc.JdbcTransactionConfig" />
	</bean>
	
	<bean id="gImporterDataClass" class="org.bibsonomy.gImporter.gImporterData" ></bean>
	
	
	<import resource="classpath:TestDatabaseBaseContext.xml" />
	
	
	
		
</beans>