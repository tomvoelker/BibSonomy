<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="dnbImporter" class="org.bibsonomy.dnbimport.DnbImporter">
		<property name="offset" value="${dnbimporter.initialOffset}"/>
		<property name="adminLogic" ref="adminLogic"/>
		<property name="userName" value="${dnbimporter.username}" /> <!-- genealogie --> 
		<property name="dnbDatabaseManager" ref="dnbDatabaseManager"/>
	</bean>
				
	<bean id="fileLogic" class="org.bibsonomy.testutil.DummyFileLogic" />
	
	<!-- dummies for lucene index -->
	<bean id="dummySearch" class="org.bibsonomy.testutil.DummyResourceSearch" />
	<alias name="dummySearch" alias="luceneBookmarkSearch" />
	<alias name="dummySearch" alias="lucenePublicationSearch" />
	<alias name="dummySearch" alias="luceneGoldStandardPublicationSearch" />
	<alias name="dummySearch" alias="publicationSearch" />
	
	<bean id="personSearch" class="org.bibsonomy.testutil.DummyPersonSearch" />
	
	<import resource="classpath:TestDatabaseContext.xml"/>
	
	<bean id="dnbDataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="${database.dnb.driverClassName}" />
		<property name="url" value="${database.dnb.url}" />
		<property name="username" value="${database.dnb.username}" />
		<property name="password" value="${database.dnb.password}" />
	</bean>
	
	<bean id="dnbDatabaseManager" class="org.bibsonomy.dnbimport.database.DnbDatabaseManager">
		<property name="sessionFactory" ref="dnbSessionFactory" />
		
	</bean>
	
	<bean id="dnbSessionFactory" class="org.bibsonomy.database.common.impl.SqlMapClientDBSessionFactory">
		<property name="client" ref="dnbSqlMapClient" />
	</bean>
	
	<bean id="dnbSqlMapClient" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
		
		<property name="dataSource" ref="dnbDataSource" />
		<property name="configLocation" value="classpath:SqlMapConfiggImporter.xml" />
		<property name="transactionConfigClass" value="com.ibatis.sqlmap.engine.transaction.jdbc.JdbcTransactionConfig" />
	</bean>
	
	<bean id="adminLogic" class="org.bibsonomy.webapp.util.spring.factorybeans.AdminLogicFactoryBeanCopy" scope="singleton">
		<!-- name the admin user will have when accessing the logic interface -->
		<property name="adminUserName" value="${dnbimporter.username}"/>
		<property name="dbSessionFactory" ref="dbSessionFactory"/>
		<!-- 
		<property name="bibtexReader" ref="bibtexReader"/>
		 -->
	</bean>
	
	
	<bean id="importerProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="locations">
			<list>
				<value>classpath:bibsonomy-dnbimporter.properties</value>
				<value>file:${user.home}/bibsonomy-dnbimporter.properties</value>
			</list>
		</property>
		<property name="ignoreResourceNotFound" value="true" />
	</bean>
	
	<bean id="importerConfigFilePropertyConfigurer" class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
		<property name="properties" ref="importerProperties" />
	</bean>
	
	<!-- 
	<import resource="classpath:TestDatabaseBaseContext.xml" />
	 -->
	
	
	
		
</beans>