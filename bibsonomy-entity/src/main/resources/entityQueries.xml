<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.mybatis.example.Entity-Identification">

<!-- database bibsonomy_strudel -->
<select id="selectBibtex" parameterType="int" resultType="String">
	SELECT author FROM bibtex LIMIT 100
</select>

<select id="selectAuthor" parameterType="String" resultType="String">
	SELECT author FROM author
</select>
 
<!--  MyOwn test -->
<select id="selectMyOwn" parameterType="String" resultType="java.util.Map">
	SELECT tas.user_name, bibtex.author FROM tas INNER JOIN bibtex using(content_id) WHERE tag_name = 'myown' ORDER BY user_name
</select>

<select id="DBLPTest" parameterType="int" resultType="java.util.Map">
	SELECT author, content_id FROM authors_dblp
</select>

<select id="DBLPAuthor" parameterType="int" resultType="String">
	SELECT author FROM authors_dblp WHERE content_id = #{contentID}
</select>

<select id="DBLPPreperation" parameterType="int" resultType="java.util.Map">
	SELECT author_name_and_number, author_id, authors_string, content_id FROM author_id_number_list
</select>

<!-- bibsonomy_strudel DBLP Tests -->
<select id="selectBibtexDBLP" parameterType="int" resultType="String">
	SELECT author FROM bibtex WHERE user_name = 'dblp' AND author like '%00%' LIMIT 500
</select>
  
<!-- database projekt_autoren_id -->
<select id="selectLastInsertID" parameterType="int" resultType="int">
	SELECT LAST_INSERT_ID()
</select>

<select id="selectAuthorNames" parameterType="String" resultType="String">
	SELECT normalized_name FROM author GROUP BY normalized_name LIMIT 30
</select>

<select id="selectRkrAuthor" parameterType="String" resultType="HashMap">
	SELECT author_id, normalized_name FROM author
</select>

<select id="countAuthorsByName" parameterType="String" resultType="int">
	SELECT count(*) FROM author WHERE normalized_name = #{normalizedName} LIMIT 100
</select>
	
<select id="selectCoAuthors" parameterType="String" resultType="java.util.Map">
	SELECT author_id, normalized_coauthor FROM author INNER JOIN author_coauthor USING (author_id) where author.normalized_name = #{normalizedName}
</select>

<select id="selectCoAuthorsLucene" parameterType="String" resultType="java.util.Map">
	SELECT author_id, author.normalized_name, normalized_coauthor FROM author INNER JOIN author_coauthor USING (author_id) where author.normalized_name = #{normalizedName} LIMIT 1000
</select>
	
<insert id="insertAuthorIDAndNumber" parameterType="HashMap">
	INSERT INTO author_id_number_list(author_name_and_number,  author_id, authors_string, content_id) VALUES(#{authorNameAndNumber},#{authorID},#{authorsString},#{contentID});
</insert>	

<insert id="insertAuthor" parameterType="String">
	INSERT INTO author(first_name, last_name, normalized_name) VALUES (#{firstName}, #{lastName}, #{normalizedName});
</insert>

<insert id="insertCoAuthors" parameterType="String">
	INSERT INTO author_coauthor(author_id, normalized_coauthor) VALUES (LAST_INSERT_ID(),#{normalizedName});
</insert>

<insert id="insertMergedCoAuthor" parameterType="HashMap">
	INSERT INTO author_coauthor(author_id, normalized_coauthor) VALUES (#{authorID},#{normalizedCoauthor});
</insert>

<delete id="deleteCoAuthors" parameterType="int">
	DELETE FROM author_coauthor WHERE author_id = #{tmpInnerMaxAuthorID};
</delete>

<delete id="deleteAuthor" parameterType="int">
	DELETE FROM author WHERE author_id = #{tmpInnerMaxAuthorID};
</delete>

<insert id="truncateAuthor" parameterType="int">
	TRUNCATE TABLE author
</insert>

<insert id="truncateAuthorCoauthor" parameterType="int">
	TRUNCATE TABLE author_coauthor
</insert>

<insert id="backupAuthor" parameterType="int">
	INSERT INTO author SELECT * from author_backup
</insert>

<insert id="backupAuthorCoauthor" parameterType="int">
	INSERT INTO author_coauthor SELECT * from author_coauthor_backup
</insert>

</mapper>
