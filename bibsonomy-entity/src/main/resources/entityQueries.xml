<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.mybatis.example.Entity-Identification">

<!-- database bibsonomy_strudel -->
<select id="selectBibtex" parameterType="int" resultType="String">
	SELECT author FROM bibtex WHERE `group` = #{groupId} LIMIT 1000
</select>
<select id="selectAuthor" parameterType="String" resultType="String">
	SELECT author FROM author WHERE `group` = 0
</select>
 
 <!-- database projekt_autoren_id -->
 <select id="lastIDInsertAuthor" parameterType="String" resultType="int">
	SELECT author_id FROM author WHERE normalized_name = #{normalizedName} ORDER BY author_id DESC
</select>

 <select id="lastInsertID" resultType="int">
	SELECT last_insert_id()
</select>
				
<insert id="insertAuthor" parameterType="String">
	INSERT INTO author(first_name, last_name, normalized_name) VALUES (#{firstName}, #{lastName}, #{normalizedName});
</insert>

<insert id="insertFirstCoAuthor" parameterType="String">
	INSERT INTO coauthor_list(author_id) VALUES(1)
</insert>

<insert id="insertFirstCoAuthor2" parameterType="String">
	INSERT INTO coauthor(normalized_name, coauthorlist_id) VALUES (#{normalizedName}, 1);
</insert>

<insert id="insertCoAuthor" parameterType="String">
	INSERT INTO coauthor(coauthorlist_id,normalized_name) VALUES (#{ListID}, #{normalizedName});
</insert>

</mapper>
