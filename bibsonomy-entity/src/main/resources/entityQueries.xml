<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.mybatis.example.Entity-Identification">

<!-- database bibsonomy_strudel -->
<select id="selectBibtex" parameterType="int" resultType="String">
SELECT author FROM bibtex WHERE `group` = #{groupId} LIMIT 10000
</select>
<select id="selectAuthor" parameterType="String" resultType="String">
SELECT author FROM author WHERE `group` = 0
</select>
 
 <!-- database projekt_autoren_id -->
 <select id="countAuthorsByName" parameterType="String" resultType="int">
SELECT count(*) FROM author WHERE normalized_name = #{normalizedName} LIMIT 10000
</select>
				
 <!-- database projekt_autoren_id
 <select id="countAuthorsByName" parameterType="String" resultType="int">
SELECT count(*) FROM author WHERE first_name = #{firstName} AND last_name = #{lastName}
</select>
-->

<insert id="insertAuthor" parameterType="String">
INSERT INTO author(first_name, last_name, normalized_name) VALUES (#{firstName}, #{lastName}, #{normalizedName});
</insert>
<insert id="insertCoAuthors" parameterType="String">
INSERT INTO author_coauthor(author_id, normalized_coauthor) VALUES (#{normalizedName});
</insert>


</mapper>
