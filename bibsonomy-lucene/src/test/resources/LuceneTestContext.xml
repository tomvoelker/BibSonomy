<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans.xsd">
						
	<bean id="propertyConfigurerLucene" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations" value="classpath:lucene-test.properties" />
		<property name="ignoreUnresolvablePlaceholders" value="true" />
	</bean>
	
	<!-- TODO: move to bibsonomy-lucene-context as soon as we are not using jndi -->
	<bean id="luceneDataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="${database.lucene.driverClassName}" />
		<property name="url" value="${database.lucene.url}" />
		<property name="username" value="${database.lucene.username}" />
		<property name="password" value="${database.lucene.password}" />
	</bean>
	
	<!-- 
	<alias name="realSharedIndexUpdatePlugin" alias="sharedIndexUpdatePlugin"/>
	
	<alias name="realEsPublicationSearch" alias="esPublicationSearch"/>
	<alias name="realEsBookmarkSearch" alias="esBookmarkSearch"/>
	<alias name="realEsGoldStandardSearch" alias="esGoldStandardSearch"/>
	 -->
	
	<import resource="classpath:TestDatabaseBaseContext.xml" />
	
	<import resource="classpath:org/bibsonomy/bibsonomy-lucene-context.xml" />
</beans>