<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.springframework.org/schema/util 
						http://www.springframework.org/schema/util/spring-util-3.0.xsd">
						
	<bean id="propertyConfigurerLucene" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:elasticsearch-test.properties</value>
			</list>
		</property>
		<property name="ignoreUnresolvablePlaceholders" value="true" />
	</bean>
	
	<bean id="esClient" class="org.bibsonomy.es.ESTestClient" lazy-init="true" />
	
	<bean id="esClientInitializer" class="org.bibsonomy.search.es.ESTestClientInitializer" lazy-init="true">
		<property name="luceneResourceManagers" ref="allLuceneResourceManagers" />
		<property name="sharedIndexUpdatePlugins" ref="allSharedIndexUpdatePlugins"/>
		<property name="esClient" ref="esClient" />
	</bean>
	
	<import resource="classpath:TestDatabaseBaseContext.xml"/>
	<import resource="classpath:TestDatabaseContext.xml"/>
	<import resource="classpath:SearchTestContext.xml" />
	
	<alias name="elasticSearchPublicationSearch" alias="personSearch" />
	
	<alias name="elasticSearchBookmarkSearch" alias="bookmarkSearch" />
	<alias name="elasticSearchPublicationSearch" alias="publicationSearch" />
	
	<!-- FIXME: replace with correct search index -->
	<alias name="elasticSearchPublicationSearch" alias="goldStandardPublicationSearch" />
	
	<import resource="classpath:/org/bibsonomy/bibsonomy-search-elasticsearch-context.xml" />
</beans>