<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	                    http://www.springframework.org/schema/util 
	                    http://www.springframework.org/schema/util/spring-util-2.5.xsd">
	<import resource="classpath:org/bibsonomy/bibsonomy-rest-server-context.xml"/>
	
	<bean id="fileLogic" class="org.bibsonomy.testutil.DummyFileLogic" />
	
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations" value="classpath:rest-server-test.properties" />
		<property name="ignoreUnresolvablePlaceholders" value ="true"/>
	</bean>
	
	<util:list id="authenticationHandlers">
		<ref bean="basicRestAuthenticationHandler" />
	</util:list>
	
	<bean id="basicRestAuthenticationHandler" class="org.bibsonomy.rest.BasicAuthenticationHandler">
		<property name="logicFactory" ref="testLogicFactory" />
	</bean>
	
	<bean id="testLogicFactory" class="org.bibsonomy.rest.database.TestDBLogicInterfaceFactory" />
</beans>