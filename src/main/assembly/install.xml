<!-- this file collects all data for installing a new BibSonomy / PUMA instance -->
<assembly>
   <id>install-files</id>
   <formats>
      <format>tar.gz</format>
   </formats>
   <includeBaseDirectory>false</includeBaseDirectory>
   <files>
      <file>
         <source>misc/jabref/default-config.xml</source>
         <destName>config-files/jabref-default-config.xml</destName>
      </file>
      <!-- scripts for installing bibsonomy/puma -->
      <file>
         <source>misc/scripts/createUploadFolders.sh</source>
         <fileMode>0755</fileMode>
         <destName>install-scripts/createUploadFolders.sh</destName>
      </file>
      <!-- default user picture -->
      <file>
         <source>bibsonomy-webapp/src/main/webapp/resources/image/no_picture.png</source>
      </file>
      <!-- database schemata -->
      <file>
         <source>bibsonomy-database/src/main/resources/bibsonomy-db-schema.sql</source>
      </file>
      <file>
         <source>bibsonomy-database/src/main/resources/bibsonomy-db-init.sql</source>
      </file>
      <file>
         <source>bibsonomy-recommender/src/main/resources/recommender-db-schema.sql</source>
      </file>
      <file>
         <source>bibsonomy-logging/src/main/resources/database/logging-db-schema.sql</source>
      </file>
      <file>
         <source>bibsonomy-opensocial/src/main/resources/database/opensocial-db-schema.sql</source>
      </file>
   </files>
</assembly>