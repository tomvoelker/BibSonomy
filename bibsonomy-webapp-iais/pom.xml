<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>bibsonomy-webapp-iais</artifactId>
	<packaging>war</packaging>
	<name>BibSonomy Webapp IAIS</name>
	<description>PUMA version of BibSonomy for Fraunhofer IAIS</description>
	<parent>
		<groupId>org.bibsonomy</groupId>
		<artifactId>bibsonomy</artifactId>
		<version>2.0.39-SNAPSHOT</version>
	</parent>
	<dependencies>
		<dependency>
			<groupId>org.bibsonomy</groupId>
			<artifactId>bibsonomy-webapp</artifactId>
			<version>${project.version}</version>
			<type>war</type>
		</dependency>
	</dependencies>
	<profiles>
		<profile>
			<id>deploy-to-puma-iais_dev</id>
			<!-- change tomcat deploy destination when -Ddeploy-to=puma-ff-puma is given as parameter. -->
			<activation>
				<property>
					<name>deploy-to</name>
					<value>puma_iais_dev</value>
				</property>
			</activation>
			<properties>
				<maven.tomcat.server>puma_iais_dev</maven.tomcat.server>
				<maven.tomcat.url>http://iais-dev.puma.bibliothek.uni-kassel.de:8080/manager</maven.tomcat.url>
				<maven.tomcat.path>/bibsonomy-webapp</maven.tomcat.path>
			</properties>
		</profile>
	</profiles>
</project>