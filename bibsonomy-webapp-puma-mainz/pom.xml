<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>bibsonomy-webapp-puma-mainz</artifactId>
	<parent>
		<groupId>org.bibsonomy</groupId>
		<artifactId>bibsonomy</artifactId>
		<version>2.0.39-SNAPSHOT</version>
	</parent>
	<packaging>war</packaging>
	<name>BibSonomy Webapp PUMA Mainz</name>
	<description>PUMA version of BibSonomy for Library of Mainz University</description>
	<dependencies>
		<dependency>
			<groupId>org.bibsonomy</groupId>
			<artifactId>bibsonomy-webapp</artifactId>
			<version>${project.version}</version>
			<type>war</type>
			<scope>runtime</scope>
		</dependency>
	</dependencies>
	<profiles>
		<profile>
			<id>deploy-to-puma-sandbox</id>
			<!--
				change tomcat deploy destination when -Ddeploy-to=puma_sandbox is given
				as parameter.
			-->
			<activation>
				<property>
					<name>deploy-to</name>
					<value>puma_sandbox</value>
				</property>
			</activation>
			<properties>
				<maven.tomcat.server>tomcat_puma_sandbox</maven.tomcat.server>
				<maven.tomcat.url>http://sandbox.puma.bibliothek.uni-kassel.de:8080/manager</maven.tomcat.url>
			</properties>
		</profile>
		<profile>
			<id>deploy-to-puma-mz-dev</id>
			<activation>
				<property>
					<name>deploy-to</name>
					<value>puma_mainz_dev</value>
				</property>
			</activation>
			<properties>
				<maven.tomcat.server>tomcat_puma_mz_dev</maven.tomcat.server>
				<maven.tomcat.url>http://mz-dev.puma.bibliothek.uni-kassel.de:8080/manager</maven.tomcat.url>
				<maven.tomcat.path>/bibsonomy-webapp</maven.tomcat.path>
			</properties>
		</profile>
	</profiles>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat6-maven-plugin</artifactId>
				<version>2.0</version>
			</plugin>
		</plugins>
	</build>
</project>
