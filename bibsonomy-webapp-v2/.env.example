# API Configuration
VITE_API_BASE_URL=http://localhost:8080

# MSW Configuration
# Set to 'true' to enable API mocking in development
VITE_ENABLE_MOCKS=true

# Application Configuration
VITE_APP_TITLE=BibSonomy
VITE_APP_VERSION=2.0.0

# Project Theme / Branding
# Possible values: bibsonomy, biblicious, puma
# Note: In dev mode (bun run dev), the theme is always 'biblicious' (BibLicious branding)
# In production build, this value is used (defaults to 'bibsonomy' if not set)
VITE_PROJECT_THEME=bibsonomy
